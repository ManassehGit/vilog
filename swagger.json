{
    "swagger": "2.0",
    "info": {
      "version": "1.0.0", 
      "title": "ViLog API",
      "description": "ViLog endpoints for interactions with the database and working with the visitors and users tables",
      "license": {
        "name": "MIT",
        "url": "https://opensource.org/licenses/MIT"
      }
    },
    "host": "localhost:8000",
    "basePath": "/",
    "tags": [
      {
        "name": "Users",
        "description": "API for users in the system"
      }
    ],
    "schemes": ["http"],
    "consumes": ["application/json"],
    "produces": ["application/json"],
    "paths": {
        "/users": {
          "get": {
            "tags": ["Users"],
            "summary": "Get all users in system",
            "responses": {
              "200": {
                "description": "OK"
              }
            }
          }
        },
        "/addUser": {
            "post": {
              "tags": ["Users"],
              "description": "Create new user in system",
              "parameters": [
                {
                  "name": "user",
                  "in": "body",
                  "description": "User that we want to create"
                }
              ],
              "produces": ["application/json"],
              "responses": {
                "200": {
                  "description": "New user is created"
                }
              }
            }
          }
      },
      "definitions": {
        "users": {
          "required": ["id", "username", "user_password", "department"],
          "properties": {
            "id": {
              "type": "integer",
              "uniqueItems": true
            },
            "username": {
              "type": "string"
            },
            "user_password": {
              "type": "string"
            },
            "department": {
              "type": "string"
            }
          }
        }
        
    }
}  

  